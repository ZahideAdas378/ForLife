                    <div class="registration-page-area bg-secondary section-space-bottom">
                        <div class="container" style="width:950px;">
                            <div class="registration-details-area inner-page-padding">
                                @using (Html.BeginForm("PatientRegisterPost", "Patient", new { id = "personal-info-form" }))
                                {

                                    <div class="row">
                                        @Html.AntiForgeryToken()
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="col-lg-12">
                                                    <div class="form-group" style="font-size:15px;">

                                                        @Html.LabelFor(model => model.IdentityNumber, "Tc Kimlik ", htmlAttributes: new { @class = "control-label col-md-2" })
                                                        <div class="col-md-10">
                                                            @Html.TextBoxFor(model => model.IdentityNumber, new { @class = "form-control", id = "first-name" })
                                                            @Html.ValidationMessageFor(model => model.IdentityNumber, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style="font-size:15px;">
                                                        @Html.LabelFor(model => model.Address, "Adres ", htmlAttributes: new { @class = "control-label col-md-2" })
                                                        <div class="col-md-10">
                                                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", id = "first-name" })
                                                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-6 " style="margin-left:-15px; padding-top:20px;">
                                                        <div class="form-group" style="font-size:15px;">
                                                            @Html.LabelFor(model => model.City, "Şehir ", new { @class = "control-label col-md-2" })
                                                            <div class="col-md-10" style="font-size:20px;">
                                                                @Html.DropDownList("CityID", (IEnumerable<SelectListItem>)ViewBag.Cities, "Lütfen Seçiniz", new { htmlAttributes = new { @class = "form-control" } })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6 " style="padding-top:20px;">
                                                        <div class="form-group" style="font-size:15px;">
                                                            @Html.LabelFor(model => model.City.Country, "Ülke ", new { @class = "control-label col-md-2" })
                                                            <div class="col-md-10" style="padding-bottom:20px;font-size:20px;">
                                                                @Html.DropDownList("CountryID", (IEnumerable<SelectListItem>)ViewBag.Country, "Lütfen Seçiniz", new { htmlAttributes = new { @class = "form-control" } })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group" style=" padding-top:20px; font-size:15px;">
                                                        @Html.LabelFor(model => model.Phone, "Telefon Numarası ", htmlAttributes: new { @class = "control-label col-md-2" })
                                                        <div class="col-md-10">
                                                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", id = "first-name" })
                                                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-6 " style="font-size:15px; ">
                                                        <div class="form-group" style="margin-left:-155px; padding-top:20px; font-size:15px;">
                                                            @Html.LabelFor(model => model.Gender, "Cinsiyet ", htmlAttributes: new { @class = "control-label col-md-2" })
                                                            <div class="col-md-10">
                                                                <div class="col-lg-6" style="display:inline">
                                                                    @Html.LabelFor(model => model.Gender, "Erkek ", htmlAttributes: new { @class = "control-label col-md-2 " })
                                                                    @Html.RadioButtonFor(model => model.Gender, new { @class = "form-control", id = "first-name" })
                                                                </div>
                                                                <div class="col-lg-6">
                                                                    @Html.LabelFor(model => model.Gender, "Kadın ", htmlAttributes: new { @class = "control-label col-md-2" })
                                                                    @Html.RadioButtonFor(model => model.Gender, new { @class = "form-control", id = "first-name" })
                                                                </div>

                                                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-6 " style="padding-top:20px;">
                                                        <div class="form-group" style="margin-left:-15px;font-size:15px;">
                                                            @Html.LabelFor(model => model.BloodGroup, "Kan Grubu ", new { @class = "control-label col-md-2" })
                                                            <div class="col-md-10" style="padding-bottom:20px;font-size:20px;">
                                                                @Html.DropDownList("BloodGroupID", (IEnumerable<SelectListItem>)ViewBag.BloodGroup, "Lütfen Seçiniz", new { htmlAttributes = new { @class = "form-control" } })
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-6 " style="padding-top:20px;">
                                                        <div class="form-group" style="font-size:15px;">
                                                            @Html.LabelFor(model => model.DonationTypes, "Bağış Türü ", new { @class = "control-label col-md-2" })
                                                            <div class="col-md-10" style="padding-bottom:20px;font-size:20px;">
                                                                @Html.DropDownList("DonationTypeID", (IEnumerable<SelectListItem>)ViewBag.DonationType, "Lütfen Seçiniz", new { htmlAttributes = new { @class = "form-control",id="district" } })
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-group" style=" padding-top:20px; font-size:15px;">


                                                        @Html.LabelFor(model => model.DonationDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                                        <div class="col-md-10">
                                                            @Html.TextBoxFor(model => model.DonationDate, new { type = "datetime-local" })

                                                            @Html.ValidationMessageFor(model => model.DonationDate, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                            <div class="pLace-order">
                                                                <button class="update-btn disabled" type="button" value="Sonraki">Sonraki Sayfa</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
