@using Entities.ForLife
@model Patient
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="registration-page-area bg-secondary section-space-bottom">
    <div class="container" style="width:950px;">
        <div class="registration-details-area inner-page-padding">
            <h2 class="title-default">HASTA PROFİLİ OLUŞTUR</h2>
            <div class="row">
                <div class="col-lg-12">
                    <strong><h2>Adım 2</h2></strong>
                    <p>Lütfen ForLife.com hesabınıza erişmek için "Kullanıcı Adı" ve "Şifre" oluşturunuz.Şifrenizi unutmanız durumunda sorulacak olan güvenlik sorusunu seçip cevabınızı giriniz..</p>
                </div>
            </div>
            @using (Html.BeginForm("PatientRegisterPostTwo", "Patient",FormMethod.Post,new { id = "personal-info-form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-9">

                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.UserName, "KULLANICI ADI(Min 5,Max 20 Karakter)", htmlAttributes: new { @class = "control-label " })
                                <div >
                                    @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-lg-12"  >
                                @Html.LabelFor(model => model.Password, "ŞİFRE (Min 5,Max 20 Karakter)", htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.TextBoxFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.SecurityQuestion, "Güvenlik Sorusu Giriniz", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model=>model.SecurityQuestionID, (IEnumerable<SelectListItem>)ViewBag.SecurityQuestion, "Lütfen Seçiniz", new { @class = "form-control"})
                                    @Html.TextBoxFor(model => model.SecurityAnswer, new { @class = "form-control", id = "first-name" })
                                    @Html.ValidationMessageFor(model => model.SecurityQuestionID, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="pLace-order">
                                        @*<button class="update-btn disabled" type="button" value="Sonraki">KAYDET</button>*@
                                        <input type="submit" value="KAYDET" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
